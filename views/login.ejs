<html lang="en">
  <head>
    <meta charset='UTF-8'>
    <metaname='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0'>
    <meta http-equiv='X-UA-Compatible' content='ie=edge'>
    <link rel="stylesheet" href="/css/app.css">
    <title>Photo Gallery</title>
  </head>
  <body class="login">
    <ul id="navbar">
      <li>
        <a href="/">PhotoGallery</a>
      </li>
      <li>
        <a href="/">Back to Home</a>
      </li>
      <% if(user && user.loggedin) {%>
        <li>
          <a href="/login?action=logout" id="logout">logout</a>
        </li>
      <% } else {%>
        <li>
          <a href="/register">Register</a>
        </li>
        <li>
          <a href="/login">Login</a>
        </li>
        <% }%>
    </ul>
    <div class="form-register">
      <div class="header">
        <h1>Login</h1>
        <p>Access all your photos, or add new ones</p>
      </div>
      <div class="formContainer">
        <form action="/login" method="POST">
          <div class="row">
            <div class="col-25">
              <label for="userEmail">Email</label>
            </div>
            <div class="col-75">
              <input type="email" name="userEmail" placeholder="Enter Email">
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="userPassword">Password</label>
            </div>
            <div class="col-75">
              <input type="password" name="userPassword" placeholder="Enter Password">
            </div>
          </div>
          <div class="row">
            <div class="col-25">
            </div>
            <div class="col-75">
              <span id="loginMsg">
                <!-- Add msg here -->
                <% if(msg){ %>
                    <%= msg %>
                <% } %>  
              </span>
            </div>
          </div>
          <div class="row">
            <div class="col-25">

            </div>
            <div class="col-75">
              <input type="submit" value="Login">
            </div>
          </div>
          <div class="row">
            <div class="col-25">

            </div>
            <div class="col-75">
              <div class="form-register">
                <p>Do not have an account? <a href="/register">Register</a> instead?</p>
              </div>
            </div>
        </div>
        </form>
      </div>
    </div>
    <div class="footer">
      <p>Copyright @ RitvikSingh - All rights reserved</p>
    </div>
  </body>
</html>